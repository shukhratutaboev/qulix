@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Employee
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Item Id
			</th>
            <th>
                Fullname
			</th>
            <th>
                Signed Date
			</th>
            <th>
                Position
			</th>
            <th>
                Company
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
				</td>
                <td width="30%">
                    @($"{obj.Firstname} {obj.Lastname} {obj.Middlename}")
				</td>
                @* <td width="20%">
                    @obj.SignedDate.DateTime.ToShortDateString()
				</td> *@
                <td width="20%">
                    @nameof(obj.Position)
				</td>
                <td width="20%">
                    @obj.Company.Name
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Dashboard" asp-action="ItemEdit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Dashboard" asp-action="DeleteItem" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>